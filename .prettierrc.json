{
  "arrowParens": "always",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "jsonRecursiveSort": true,
  "overrides": [
    {
      "files": ["package.json", "**/package.json"],
      "options": {
        "parser": "json",
        "printWidth": 100
      }
    },
    {
      "files": ["*.json", "*.jsonc"],
      "options": { "parser": "json", "trailingComma": "none" }
    },
    {
      "files": ["pnpm-lock.yaml", "config/vscode/settings.json", "config/vscode/keybindings.json"],
      "options": { "jsonRecursiveSort": false }
    },
    {
      "files": ["*.yaml", "*.yml"],
      "options": {
        "parser": "yaml",
        "proseWrap": "preserve",
        "tabWidth": 2
      }
    },
    {
      "files": ["*.md", "*.mdx"],
      "options": { "proseWrap": "always" }
    },
    {
      "files": ["*.test.*", "**/__tests__/**/*"],
      "options": { "printWidth": 100 }
    }
  ],
  "plugins": ["prettier-plugin-sort-json"],
  "printWidth": 100,
  "proseWrap": "always",
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false
}
