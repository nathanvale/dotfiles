{
	"rules": [
		{
			"description": "Map ctrl + [ to escape",
			"manipulators": [
				{
					"from": {
						"key_code": "open_bracket",
						"modifiers": {
							"mandatory": ["control"],
							"optional": ["any"]
						}
					},
					"to": [
						{
							"key_code": "escape"
						}
					],
					"type": "basic"
				}
			]
		}
	],
	"title": "Vim style escape key mapping"
}
