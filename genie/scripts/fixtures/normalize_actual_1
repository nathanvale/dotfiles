# Default settings for all hosts
Host *
    ForwardAgent yes
    ForwardX11 yes
    ForwardX11Trusted yes
    ServerAliveInterval 60
    ServerAliveCountMax 120
    ControlMaster auto
    ControlPath ~/.ssh/sockets/%r@%h-%p
    ControlPersist 4h

# Specific settings for a development server
Host dev-server
    HostName dev.example.com
    User nathan
    Port 2200
    IdentityFile ~/.ssh/id_rsa_dev
    LocalForward 8080 localhost:80
    RemoteForward 9090 localhost:90

# Settings for a production server
Host prod-server
    HostName prod.example.com
    User deploy
    Port 2222
    IdentityFile ~/.ssh/id_rsa_prod
    LocalForward 8000 localhost:8000
    RemoteForward 9000 localhost:9000
    ProxyJump jumphost.example.com

Host github.com
    User git
    IdentityFile ~/.ssh/id_rsa_github

# Config for a bastion host
Host bastion
    HostName bastion.example.com
    User nathan
    Port 2200
    IdentityFile ~/.ssh/id_rsa_bastion
    ForwardAgent no

# Config for a database server
Host db-server
    HostName db.example.com
    User dbadmin
    Port 3306
    IdentityFile ~/.ssh/id_rsa_db
    LocalForward 3306 localhost:3306

# Config for a test server
Host test-server
    HostName test.example.com
    User testuser
    Port 2222
    IdentityFile ~/.ssh/id_rsa_test
    LocalForward 3000 localhost:3000
    RemoteForward 4000 localhost:4000

# Config for a remote desktop connection
Host remote-desktop
    HostName desktop.example.com
    User desktopuser
    Port 3389
    IdentityFile ~/.ssh/id_rsa_desktop
    LocalForward 3389 localhost:3389

# Config for a remote Jenkins server
Host jenkins-server
    HostName jenkins.example.com
    User jenkins
    Port 8080
    IdentityFile ~/.ssh/id_rsa_jenkins
    LocalForward 8080 localhost:8080

# Config for an SFTP server
Host sftp-server
    HostName sftp.example.com
    User sftpuser
    Port 22
    IdentityFile ~/.ssh/id_rsa_sftp
    ForwardAgent no

# Config for a CI/CD server
Host cicd-server
    HostName cicd.example.com
    User cicd
    Port 2022
    IdentityFile ~/.ssh/id_rsa_cicd
    LocalForward 8001 localhost:8001
    RemoteForward 9001 localhost:9001

# Config for an internal tools server
Host tools-server
    HostName tools.example.com
    User toolsuser
    Port 2223
    IdentityFile ~/.ssh/id_rsa_tools
    LocalForward 8081 localhost:8081
    RemoteForward 9091 localhost:9091

# Config for a customer server
Host customer-server
    HostName customer.example.com
    User customer
    Port 2224
    IdentityFile ~/.ssh/id_rsa_customer
    LocalForward 8082 localhost:8082
    RemoteForward 9092 localhost:9092

# Config for a backup server
Host backup-server
    HostName backup.example.com
    User backup
    Port 2225
    IdentityFile ~/.ssh/id_rsa_backup
    LocalForward 8083 localhost:8083
    RemoteForward 9093 localhost:9093
