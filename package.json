{
	"name": "dotfiles",
	"version": "1.0.0",
	"description": "Personal dotfiles and configuration management",
	"author": "",
	"license": "ISC",
	"private": true,
	"keywords": [],
	"scripts": {
		"check": "biome check --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"lint:scripts": "find . -type f \\( -name '*.sh' -o -name '*.bash' -o -name '*.zsh' \\) ! -path './node_modules/*' -exec shellcheck {} +",
		"lint:workflows": "actionlint",
		"prepare": "husky",
		"validate": "bun run lint && bun run format:check && bun run lint:scripts && bun run lint:workflows"
	},
	"dependencies": {
		"puppeteer": "^24.32.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"commitlint-config-git-commit-emoji": "^1.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,mts,cts,json,md}": [
			"biome check --write"
		]
	}
}
